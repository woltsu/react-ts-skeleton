{
  "name": "react-skeleton",
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "@sentry/browser": "^4.5.3",
    "@types/jest": "24.0.0",
    "@types/node": "10.12.21",
    "@types/react": "16.8.2",
    "@types/react-dom": "16.8.0",
    "@types/react-redux": "^7.0.1",
    "@types/redux-logger": "^3.0.6",
    "react": "^16.8.1",
    "react-dom": "^16.8.1",
    "react-redux": "^6.0.0",
    "react-scripts": "2.1.3",
    "redux": "^4.0.1",
    "redux-devtools-extension": "^2.13.8",
    "redux-logger": "^3.0.6",
    "redux-saga": "^1.0.1",
    "typescript": "3.3.1"
  },
  "scripts": {
    "start": "npm-run-all -p watch-css start-js",
    "build": "npm-run-all build-css build-js",
    "test": "CI=true react-scripts test --env=jsdom",
    "test-coverage": "CI=true react-scripts test --env=jsdom --coverage",
    "eject": "react-scripts eject",
    "build-css": "node-sass-chokidar --include-path ./src/index.scss --include-path ./node_modules src/index.scss -o src/",
    "watch-css": "npm run build-css && node-sass-chokidar --include-path ./src/index.scss --include-path ./node_modules src/index.scss -o src/ --watch --recursive",
    "start-js": "react-scripts start",
    "build-js": "react-scripts build",
    "lint": "tslint -c tslint.json 'src/**/*.{ts,tsx}'",
    "lint-fix": "tslint -c tslint.json 'src/**/*.{ts,tsx}' --fix",
    "precommit": "yarn test && yarn run lint",
    "codecov": "./node_modules/.bin/codecov"
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "browserslist": [
    ">0.2%",
    "not dead",
    "not ie <= 11",
    "not op_mini all"
  ],
  "devDependencies": {
    "@types/enzyme": "^3.1.17",
    "@types/enzyme-adapter-react-16": "^1.0.3",
    "@types/redux-mock-store": "^1.0.0",
    "codecov": "^3.1.0",
    "enzyme": "^3.8.0",
    "enzyme-adapter-react-16": "^1.9.1",
    "husky": "^1.3.1",
    "node-sass-chokidar": "^1.3.4",
    "npm-run-all": "^4.1.5",
    "redux-mock-store": "^1.5.3",
    "tslint": "^5.12.1",
    "tslint-react": "^3.6.0"
  }
}
